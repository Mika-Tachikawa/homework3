  <div class="notice">
    <%= flash[:notice3] %>
  </div>

  <div class="container">
  <div class="row">

    <div class="col-lg-4" style="background-color: orange;">
      <%= render'users/users', user:current_user%>
      <%= render 'book', book: Book.new %>
    </div>

    <div class="col-lg-8">
      <h1>Book detail</h1>
      <table class="table table-hover">    
        </tr>      
          <td><p><%= image_tag @book.user.get_profile_image(80,80) %></p>
              <p><%= @book.user.name %></p></td>
          <td><span><%= @book.title %></span></td>
          <td><span><%= @book.body %></span></td>
          <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
           <td><% if @book.user_id == current_user.id %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %></td>
        </tr>
      </table>

  </div>
  </div>
    