<div>
  <%= flash[:notice2] %>
</div>

  <div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render'users/users', user:@book.user%>
      <div class="card border-0"style="padding-top: 20px;"><%= render 'book', book: Book.new %></div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-hover">    
        </tr>
        
          <td><p><%= image_tag @book.user.get_profile_image(80,80) %></p>
              <p><%= link_to user_path(@book.user.id) do%>
                <span><%= @book.user.name %></span>
                <% end %></p></td>
                
          <td><%= link_to book_path(@book.id) do%>
            <span><%= @book.title %></span>
            <% end %></td>
            
          <td><span><%= @book.body %></span></td>
          
          <td><% if @book.user_id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success"%>
              <% end %></td>
          
           <td><% if @book.user_id == current_user.id %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger","data-confirm" => "本当に消しますか？" %>
              <% end %></td>
        </tr>
      </table>

  </div>
  
  </div>
    