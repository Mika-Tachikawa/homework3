<!-- ユーザー情報更新完了のフラッシュメッセージ -->
<div class="notice">
  <%= flash[:notice2] %>
</div>

<%= render 'users', user: @user %>
<%= render 'books/book', book: Book.new %>



<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>

<table border="0">
  <tr>
    <th> </th>
    <th><p>Title</p></th>
    <th><p>Opinion</p></th>
  </tr>
 
  <% @books.each do |book| %>
  <tr>  
      <td><%= image_tag @user.get_profile_image(80,80) %></td>
      <td><%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %></td>
      <td><%= book.opinion %></td>
  <% end %>
  </tr>