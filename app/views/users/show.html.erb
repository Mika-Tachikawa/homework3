<!-- ユーザーの詳細 -->

<div>
  <h1>User info</h1>

    <h3><%= @user.name %></h3>
</div>


<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>

<table border="0">
  <tr>
    <th><p>Title</p></th>
    <th><p>Opinion</p></th>
  </tr>
  <tr>   
    <td><% @books.each do |book| %></td>
    <div>
      <td><%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %></td>
      <td><%= book.opinion %></td>
    </div>
    <% end %></tr>