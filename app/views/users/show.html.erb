<!-- ユーザーの詳細 -->

<!-- ユーザー情報更新完了のフラッシュメッセージ -->
<div class="container">
<div class="row">

  <div class="col-md-3">
    <%= render 'users', user: @user %>
    <div class="card border-0"style="padding-top: 20px;"><%= render 'books/book', book: Book.new %></div>
  </div>


<!-- ユーザーの投稿一覧 -->
  <div class="col-md-8 offset-md-1">

  <h2>Books</h2>
    <table class="table table-hover">
      <tr>
        <th> </th>
        <th><p>Title</p></th>
        <th><p>Opinion</p></th>
      </tr>
      <% @books.each do |book| %>
      <tr>  
        <td><%= link_to user_path(@user.id) do%>
          <%= image_tag @user.get_profile_image(80,80) %>
          <p><%= @user.name %></p>
          <% end %></td>
          
          
          <td><%= link_to book_path(book.id) do %>
          <span><%= book.title %></span>
              <% end %></td>
          <td><span><%= book.body %></span></td>
      </tr>
      <% end %>
    </table>
    
</div>
</div>